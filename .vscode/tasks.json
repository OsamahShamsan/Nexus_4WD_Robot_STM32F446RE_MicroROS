{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32 (Debug)",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "options": {
                "cwd": "${workspaceFolder}/Debug"
            },
            "group": {
                "kind": "build",
                "isDefault": false     // remove default
            },
            "problemMatcher": "$gcc",
            "detail": "Build the STM32 firmware from the Debug folder"
        },
        {
            "label": "Clean STM32 (Debug)",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/Debug"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash STM32 (SWD)",
            "type": "shell",
            "command": "STM32_Programmer_CLI",
            "args": [
                "-c", "port=swd",
                "-d", "${workspaceFolder}/Debug/NexusRobot_ROS2_Slave.elf",
                "-hardRst", "-rst", "--start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Flash the ELF to the STM32 board using ST-LINK"
        },
        {
            "label": "Build + Flash",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build STM32 (Debug)",
                "Flash STM32 (SWD)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true     // ðŸ‘ˆ now this is default
            }
        }
    ]
}
