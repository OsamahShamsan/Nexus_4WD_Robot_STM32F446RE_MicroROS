{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32 (Debug)",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "options": {
                "cwd": "${workspaceFolder}/Debug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Flash STM32 (ST-LINK)",
            "type": "shell",
            "command": "C:/Program Files/STMicroelectronics/STM32Cube/STM32CubeProgrammer/bin/STM32_Programmer_CLI.exe",
            "args": [
                "-c", "port=SWD",
                "-d", "${workspaceFolder}/Debug/NexusRobot_ROS2_Slave.elf",
                "-rst"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build + Flash",
            "dependsOn": [
                "Build STM32 (Debug)",
                "Flash STM32 (ST-LINK)"
            ],
            "dependsOrder": "sequence"
        }
    ]
}
